{% apply inline_css %}
    <style>
        #content {
            max-width: 720px;
            margin: 1.5em auto;
        }

        .email-footer {
            max-width: 720px;
            background: #578ad6;
            color: #ffffff;
            margin: 0 auto;
            padding: 0.5em;
        }

        .email-footer a {
            color: #ffffff;
        }

        .text-center {
            text-align: center;
        }

        .btn {
            display: inline-block;
            font-weight: 400;
            color: #212529;
            text-align: center;
            vertical-align: middle;
            background-color: transparent;
            border: 1px solid transparent;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            border-radius: 0.25rem;
        }

        .btn-primary {
            color: #fff;
            background-color: #f77702;
            border-color: #f77702;
        }

        .justify {
            text-align: justify;
        }

        .m-1 {
            margin: 0.25rem !important;
        }
    </style>
    {% block stylesheets %}{% endblock %}

    <p style="text-align: center"> {# TODO: make smaller #}
        <img src="{{ email.image('@images/lama_white_blue_circle.png') }}" style="width: 6rem" alt="LamaInDiab logo">
    </p>

    <div id="content">
        {% block content %}{% endblock %}
        <p>
            Z poważaniem,<br>
            Zespół platformy {{ 'project.acronym'|trans(locale='pl') }}
        </p>
    </div>

    <div class="email-footer">
        &copy; 2022 - {{ 'now' | date('Y') }} {{ 'project.acronym'|trans(locale='pl') }}
        {#        Medical support: {{ get_env('CONTACT_EMAIL_MED') }}<br>#}
        {#        Technical support: {{ get_env('CONTACT_EMAIL_TECH') }}#}
    </div>
    <br><br>
{% endapply %}
